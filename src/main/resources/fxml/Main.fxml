<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="root"
            prefWidth="800.0"
            prefHeight="600.0"
            minWidth="800.0"
            minHeight="600.0"
            maxWidth="800.0"
            maxHeight="600.0"
            style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.ambiente_vendas.controller.MainController">

    <children>

        <!-- IMAGEM TOPO -->
        <ImageView layoutX="0"
                   layoutY="0"
                   fitWidth="800.0"
                   fitHeight="220.0"
                   preserveRatio="false">
            <image>
                <Image url="@../imagens/tela inicial.png"/>
            </image>
        </ImageView>

        <!-- MENU -->
        <MenuBar layoutX="0"
                 layoutY="220.0"
                 prefWidth="800.0"
                 prefHeight="25.0">

            <menus>
                <Menu text="Home">
                    <items>
                        <MenuItem text="Tela inicial" onAction="#abrirHome"/>
                        <MenuItem text="Sair" onAction="#fecharPrograma"/>
                    </items>
                </Menu>

                <Menu text="Cadastro">
                    <items>
                        <MenuItem text="Clientes" onAction="#abrirClientes"/>
                        <MenuItem text="Vendas" onAction="#abrirVendas"/>
                    </items>
                </Menu>

                <Menu text="Ajuda">
                    <items>
                        <MenuItem text="Sobre nós" onAction="#sobrenos"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>

        <!-- ÁREA BRANCA (CONTEÚDO) -->
        <AnchorPane fx:id="content"
                    layoutX="0"
                    layoutY="245.0"
                    prefWidth="800.0"
                    prefHeight="355.0"
                    style="-fx-background-color: white;"/>

    </children>
</AnchorPane>
