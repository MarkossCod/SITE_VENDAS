<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="root" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ambiente_vendas.controller.MainController">

    <children>

        <!-- MENU -->
        <MenuBar fx:id="menuBar" prefHeight="25.0" prefWidth="800.0" style="-fx-background-color: whitre;">
            <menus>
                <Menu text="Home">
                    <items>
                        <MenuItem text="Login" onAction="#abrirLogin"/>
                        <MenuItem onAction="#fecharPrograma" text="Sair" />
                    </items>
                </Menu>

                <Menu text="Cadastro">
                    <items>
                        <MenuItem onAction="#abrirClientes" text="Clientes" />
                        <MenuItem onAction="#abrirVendas" text="Vendas" />
                        <MenuItem onAction="#abrirRelatorio" text="Relatório" />
                    </items>
                </Menu>

                <Menu text="Ajuda">
                    <items>
                        <MenuItem onAction="#sobrenos" text="Sobre nós" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>

        <!-- IMAGEM DA TELA INICIAL -->
        <ImageView fx:id="imagemInicial" fitHeight="220.0" fitWidth="800.0" layoutY="27.0" preserveRatio="false">
            <image>
                <Image url="@../imagens/tela inicial.png" />
            </image>
        </ImageView>

    </children>
</AnchorPane>
