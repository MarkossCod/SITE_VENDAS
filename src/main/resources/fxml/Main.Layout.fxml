<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="root" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ambiente_vendas.controller.MainController">

    <children>

        <ImageView fitHeight="235.0" fitWidth="791.0" layoutX="48.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../imagens/tela%20inicial.png" />
            </image>
        </ImageView>

        <MenuBar layoutY="288.0" prefHeight="25.0" prefWidth="800.0">
            <menus>

                <Menu fx:id="home" text="Home">
                    <items>
                        <MenuItem text="Tela de login" />
                        <MenuItem fx:id="relatorio" onAction="#abrirRelatorio" text="Relatório" />
                        <MenuItem fx:id="sair" onAction="#fecharPrograma" text="Sair" />
                    </items>
                </Menu>

                <Menu fx:id="cadastro" text="Cadastro">
                    <items>
                        <MenuItem fx:id="clientes" onAction="#abrirClientes" text="Clientes" />
                        <MenuItem fx:id="vendas" onAction="#abrirVendas" text="Vendas" />
                    </items>
                </Menu>

                <Menu fx:id="ajuda" text="Ajuda">
                    <items>
                        <MenuItem fx:id="sobre" onAction="#sobrenos" text="Sobre nós" />
                    </items>
                </Menu>

            </menus>
        </MenuBar>

    </children>
</AnchorPane>
