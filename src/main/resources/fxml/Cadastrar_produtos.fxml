<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ambiente_vendas.controller.ProdutosController">

    <children>

        <!-- TÍTULO -->
        <Label layoutX="201.0" layoutY="14.0" text="Cadastro de produtos" textFill="#4971c6">
            <font>
                <Font name="Arial" size="30.0" />
            </font>
        </Label>

        <!-- CAMPOS -->
        <Label layoutX="5.0" layoutY="75.0" text="NOME DO PRODUTO" />
        <TextField fx:id="nomeField" layoutX="147.0" layoutY="75.0" />

        <Label layoutX="5.0" layoutY="113.0" text="CÓDIGO DO PRODUTO" />
        <TextField fx:id="codigoField" layoutX="147.0" layoutY="113.0" />

        <Label layoutX="8.0" layoutY="156.0" text="VALOR DO PRODUTO" />
        <TextField fx:id="valorField" layoutX="147.0" layoutY="156.0" />

        <Label layoutX="14.0" layoutY="203.0" text="MARCA" />
        <TextField fx:id="marcaField" layoutX="147.0" layoutY="203.0" />

        <Label layoutX="9.0" layoutY="254.0" text="DESCRIÇÃO" />
        <TextField fx:id="descricaoField" layoutX="147.0" layoutY="254.0" prefWidth="200" />

        <!-- TABELA -->
        <TableView fx:id="tabelaProdutos" layoutY="340.0" prefHeight="259.0" prefWidth="800.0">

            <columns>
            <TableColumn fx:id="colProduto" prefWidth="200.0" text="ID PRODUTO" />
                <TableColumn fx:id="colNome" prefWidth="150.0" text="NOME" />
                <TableColumn fx:id="colMarca" prefWidth="120.0" text="MARCA" />
                <TableColumn fx:id="colValor" prefWidth="120.0" text="VALOR" />
                <TableColumn fx:id="colDescricao" prefWidth="209.0" text="DESCRIÇÃO" />
            </columns>

        </TableView>

        <!-- BOTÕES -->
        <Button layoutX="9.0" layoutY="309.0" onAction="#abrirNovo" style="-fx-background-color: #4971c6;" text="Novo" textFill="WHITE" />

        <Button layoutX="104.0" layoutY="309.0" onAction="#especificarProduto" style="-fx-background-color: #4971c6;" text="Especificar Produto" textFill="WHITE" />

        <Button layoutX="291.0" layoutY="309.0" onAction="#limparCampos" style="-fx-background-color: #4971c6;" text="Limpar campos" textFill="WHITE" />

        <Button layoutX="421.0" layoutY="309.0" onAction="#limparTabela" style="-fx-background-color: #4971c6;" text="Limpar Tabela" textFill="WHITE" />

        <Button layoutX="558.0" layoutY="309.0" onAction="#salvarAlteracoes" style="-fx-background-color: #4971c6;" text="Salvar alterações" textFill="WHITE" />

        <Button layoutX="711.0" layoutY="309.0" onAction="#btnsair" prefHeight="25.0" prefWidth="71.0" style="-fx-background-color: red;" text="Sair" textFill="WHITE" />

        <!-- IMAGEM -->
        <ImageView fitHeight="196.0" fitWidth="210.0" layoutX="496.0" layoutY="71.0" preserveRatio="true">
            <image>
                <Image url="@../imagens/MODELO_PRODUTO.png" />
            </image>
        </ImageView>

        <Label layoutX="492.0" layoutY="63.0" text="IMAGEM DO PRODUTO" />

    </children>
</AnchorPane>
